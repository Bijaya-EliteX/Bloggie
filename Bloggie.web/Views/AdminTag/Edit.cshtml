@model Bloggie.Web.Models.ViewModels.EditTagRequest

@{
}
<div class="bg-danger-subtle bg-opacity-50 py-2">
    <div class="container">
        <h1>Edit and Update Tags-Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>

            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" class="form-control" asp-for="DisplayName" />
            </div>

            <div class="d-flex">
                <button type="submit" class="btn btn-success">Update</button>
                <button type="submit" class="btn btn-danger ms-2"
                asp-Controller="AdminTag" asp-action="Delete" >Delete</button>
            </div>
        </form>
    }
    else
    {
        <p>Tag not found!</p>
    }
</div>