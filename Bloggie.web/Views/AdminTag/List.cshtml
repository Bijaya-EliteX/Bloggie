@model List<Bloggie.web.Models.Domain.Tag>
@{
}
<div class="bg-success bg-opacity-50 py-2">
    <div class="container">
        <h1>Show Tags-Admin Functionality</h1>
    </div>
</div>

    <div class="container mt-5">
        @if (Model != null && Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Display Name</th>
                        <th>Link</th> <!-- Link to edit the tag -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>@tag.Id</td>
                            <td>@tag.Name</td>
                            <td>@tag.DisplayName</td>
                            <td>
                                <a asp-area=""
                                   asp-controller="AdminTag"
                                   asp-action="Edit"
                                   asp-route-id="@tag.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>Some tags are needed</p>
        }
    </div>
