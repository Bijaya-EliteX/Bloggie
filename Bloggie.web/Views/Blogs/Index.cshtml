@model Bloggie.web.Models.Domain.BlogPost
@{
    ViewData["Title"] = Model.PageTitle;
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            @if (Model != null)
            {
                // Dynamic page title for browser tab
                

                <h1 class="mb-3">@Model.Heading</h1>

                <div class="d-flex justify-content-between mb-3">
                    <span class="text-secondary">Author: @Model.Author</span>
                    <span class="text-secondary">Published Date: @Model.PublishedDate.ToShortDateString()</span>
                </div>

                <img src="@Model.FeaturedImageUrl" class="d-block img-fluid mb-3" alt="@Model.Heading" />

                <div class="mb-3 d-flex">
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="badge bg-secondary me-1">@tag.Name</span>
                    }
                </div>

                <div class="blog-details-content mb-3">
                    @Html.Raw(Model.Content)
                </div>
            }
            else
            {
                <p>Blog post not found!</p>
            }
        </div>
    </div>
</div>
